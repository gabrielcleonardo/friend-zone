
<div class="container align-text-center">
  <div class="cards">
    <% @users.each do |user| %>
    <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://picsum.photos/640/420)" >
      <div class="card-body">
        <div class="user-info">
          <p><%= user.user_name %></p>
        </div>
        <div>
          <%= link_to "View Me!", user_path(user.id), class: "btn btn-primary" %>
        </div>
      </div>
    </div>

    <% end %>
  </div>

</div>
