<div class="container align-text-center">
  <h1>My search</h1>

  <div class="cards">
    <% @users.each do |user| %>

    <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://picsum.photos/640/420)" >

      <div class="card-body">
        <%= user.user_name %><br/>
        <%= user.email %><br/>
        <%= user.address %><br/>
      <a> <%= link_to "View me", user_path(user.id)%> </a>
      </div>
    </div>

    <% end %>
  </div>

</div>
