<div class="container">
  <h2>Sign up</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :profile_pic,
                as: :file %>
    <%= f.input :name,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "name" }%>
    <%= f.input :user_name,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "username" }%>
    <%= f.input :cpf,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "CPF" }%>
    <%= f.input :address,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "address" }%>
    <%= f.input :email,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "email" }%>
    <%= f.input :password,
                required: true,
                hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                input_html: { autocomplete: "new-password" } %>
    <%= f.input :password_confirmation,
                required: true,
                input_html: { autocomplete: "new-password" } %>
    <%= f.input :is_professional,
                as: :radio_buttons,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email" }%>
    <%= f.input :is_available,
                as: :radio_buttons,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "email" }%>


    <%= f.input :interests, as: :check_boxes, collection:User::INTERESTS, include_hidden: false %>


  </div>

  <div class="form-actions">
    <%= f.button :submit, "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
